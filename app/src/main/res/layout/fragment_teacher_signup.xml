<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".Logfiles.TeacherSignup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/tc_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:textSize="24sp"
                    android:text="Teacher Registration"
                    android:textColor="@color/white"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/tc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tc_heading"
                android:gravity="center_horizontal"
                android:layout_marginTop="35sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <!--        Name-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Name"
                    android:labelFor="@id/edtTcName" />

                <EditText
                    android:id="@+id/edtTcName"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:ems="22"/>

                <!--   Dept     -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Department"
                    android:labelFor="@id/edtTcDepartment" />
                <EditText
                    android:id="@+id/edtTcDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:ems="22"
                    android:background="@color/white"/>

                <!--        ID-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Teacher's ID"
                    android:labelFor="@id/edtTcIdentification" />

                <EditText
                    android:id="@+id/edtTcIdentification"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:ems="22"
                    android:background="@color/white"/>

                <!--        Email-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Email"
                    android:labelFor="@id/edtTcEmail" />

                <EditText
                    android:id="@+id/edtTcEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:ems="22"/>

                <!--        Password-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="PassWord"
                    android:labelFor="@id/edtTcPassword" />

                <EditText
                    android:id="@+id/edtTcPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:ems="22"/>

                <!--Image Upload-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Image"
                    android:labelFor="@id/imgImageUpload" />
                <EditText
                    android:id="@+id/imgImageUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:ems="22"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26sp"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="23sp"
                    android:background="@drawable/round_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:ems="10"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>