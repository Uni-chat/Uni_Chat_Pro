<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lySliderFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logfiles.LandingTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_above="@+id/btnLayout">

       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/get_pic_reset"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="35dp"
            android:textColor="@color/light_yellow"
            android:text="Uni Chat"
            android:textStyle="bold"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button

            android:id="@+id/btnGlobalSignUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/autotxtdesign"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGlobalSignIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/autotxtdesign"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Sign In"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true">

        <Switch
            android:id="@+id/swStudent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="Student" />
        <Switch
            android:id="@+id/swStudentAdmin"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="ST Admin" />
        <Switch
            android:id="@+id/swTeacher"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="Teacher" />
    </LinearLayout>

</RelativeLayout>