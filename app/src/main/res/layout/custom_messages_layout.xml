<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_receiver_site_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text=" Receiver Message "
        android:background="@drawable/receiver_message_layout"
        android:layout_toEndOf="@+id/message_profile_image"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_sender_site_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="Sender Message"
        android:layout_alignParentTop="@+id/txt_receiver_site_message"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>