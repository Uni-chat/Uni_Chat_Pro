<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Messages.SettingsActivity">


   <com.mikhaellopez.circularimageview.CircularImageView
       android:id="@+id/imgSetProfileImage"
       android:layout_width="270dp"
       android:layout_height="270dp"
       android:src="@drawable/profile_image"
       app:civ_border_color="@color/orange"
       app:civ_border_width="3dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       >
   </com.mikhaellopez.circularimageview.CircularImageView>

   <TextView
       android:id="@+id/txtNameOfUsers"
       android:layout_width="match_parent"
       android:layout_height="37dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"
       android:layout_below="@+id/imgSetProfileImage"
       android:inputType="textMultiLine"
       android:hint="Name"
       android:textAlignment="center"
       android:textColor="#000000"
       android:textStyle="bold"
       android:drawableStart="@drawable/ic_person_black_24dp"
       android:background="@drawable/round_button"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       android:padding="6dp"
       android:textSize="16sp"/>

   <EditText
       android:id="@+id/edtStatusOfUsers"
       android:layout_width="match_parent"
       android:layout_height="37dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:layout_below="@+id/txtNameOfUsers"
       android:inputType="textMultiLine"
       android:hint="Status"
       android:textAlignment="center"
       android:textColor="#000000"
       android:textStyle="bold"
       android:background="@drawable/round_button"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       android:padding="6dp"
       android:textSize="16sp"/>

   <Button
    android:id="@+id/updateSettingsButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/edtStatusOfUsers"
    android:inputType="textMultiLine"
    android:text="Update"
    android:textAlignment="center"
    android:textColor="#fff"
    android:textStyle="bold"
    android:background="@drawable/autotxtdesign"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:padding="8dp"
    android:textAllCaps="false"
    android:textSize="20sp"/>



</RelativeLayout>